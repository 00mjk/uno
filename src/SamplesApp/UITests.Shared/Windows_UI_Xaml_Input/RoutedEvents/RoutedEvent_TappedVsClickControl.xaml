<UserControl
	x:Class="UITests.Shared.Windows_UI_Xaml_Input.RoutedEvents.RoutedEvent_TappedVsClickControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid Background="Moccasin">
		<TextBlock>
			Children:
			<LineBreak/>
			<Run x:Name="txtChildren" />
		</TextBlock>

		<Button x:Name="btnOuter"
		        VerticalAlignment="Bottom"
		        HorizontalAlignment="Stretch">
			<Grid Margin="10" x:Name="outerContent">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>

				<TextBlock>Outer button</TextBlock>
				<Button Grid.Column="1" x:Name="btnInner">Inner button</Button>
			</Grid>
		</Button>
	</Grid>
</UserControl>
