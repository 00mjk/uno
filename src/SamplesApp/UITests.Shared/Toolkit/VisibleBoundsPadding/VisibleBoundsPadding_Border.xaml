<UserControl x:Class="UITests.Shared.Toolkit.VisibleBoundsPadding.VisibleBoundsPadding_Border"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Toolkit.VisibleBoundsPadding"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns:toolkit="using:Uno.UI.Toolkit"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="VisibleBoundsPadding - Border"
							DescriptionVisibility="Collapsed">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<Border x:Name="rootBorder"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="Yellow"
						toolkit:VisibleBoundsPadding.PaddingMask="All">
					<Border HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							Background="Green">

						<StackPanel VerticalAlignment="Center"
									HorizontalAlignment="Center">

							<Button x:Name="ShowTitleBarBtn"
									Content="Show TitleBar"
									Click="ShowTitleBar" />

							<Button x:Name="HideTitleBarBtn"
									Content="Hide TitleBar"
									Click="HideTitleBar" />
						</StackPanel>
					</Border>
				</Border>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
