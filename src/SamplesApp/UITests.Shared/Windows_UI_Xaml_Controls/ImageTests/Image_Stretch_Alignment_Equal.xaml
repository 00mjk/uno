<UserControl
	x:Class="Uno.UI.Samples.UITests.Image.Image_Stretch_Alignment_Equal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="using:Uno.UI.Samples.UITests.Image"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<Grid HorizontalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<local:Image_Stretch_Modes_Picker x:Name="modesPicker" />
		<ScrollViewer Grid.Row="1">
			<ItemsControl ItemsSource="{Binding Items, ElementName=modesPicker}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<VariableSizedWrapGrid Orientation="Horizontal" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<StackPanel Width="300" Padding="20" Background="Salmon" Margin="10">
							<TextBlock FontSize="16" Margin="0,20,0,0">
								<Run Text="{Binding Index}" />) stretch=<Run Text="{Binding Stretch}" FontWeight="Bold" />
								<LineBreak />h=<Run Text="{Binding HorizontalAlignment}" FontWeight="Bold" /> -
								v=<Run Text="{Binding VerticalAlignment}" FontWeight="Bold" />
							</TextBlock>
							<Border Width="250"
							        Height="250"
							        BorderThickness="1"
							        BorderBrush="Black"
							        Background="DeepPink">
								<Image Stretch="{Binding Stretch}"
								       VerticalAlignment="{Binding VerticalAlignment}"
								       HorizontalAlignment="{Binding HorizontalAlignment}"
								       Source="ms-appx:///Assets/test_image_250_250.png" />
							</Border>
						</StackPanel>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
	</Grid>
</UserControl>
