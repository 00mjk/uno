<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.ListView.ListView_Scrolling_Horizontal_Automated"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.ListView"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ListViewTemplates.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid Margin="32,0">

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="32" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!-- Single Selection ListView -->
		<ListView x:Name="ListViewNoGroupedItem"
				  ItemContainerStyle="{StaticResource ListViewItemContainerStyle}"
				  HeaderTemplate="{StaticResource ListViewHeaderTemplate}"
				  FooterTemplate="{StaticResource ListViewFooterTemplate}"
				  ItemTemplate="{StaticResource ListViewItemTemplate}"
				  HorizontalContentAlignment="Stretch"
				  Background="Thistle"
				  BorderBrush="LightGray"
				  BorderThickness="2,0"
				  ScrollViewer.HorizontalScrollBarVisibility="Auto"
				  ScrollViewer.HorizontalScrollMode="Auto"
				  Grid.Row="0">
			<ListView.ItemsPanel>
				<ItemsPanelTemplate>
					<ItemsStackPanel Orientation="Horizontal"
									 GroupHeaderPlacement="Top" />
				</ItemsPanelTemplate>
			</ListView.ItemsPanel>
		</ListView>

		<!-- Selection ListView -->
		<ListView x:Name="ListViewWithGroupedItem"
				  ItemContainerStyle="{StaticResource ListViewItemContainerStyle}"
				  HeaderTemplate="{StaticResource ListViewHeaderTemplate}"
				  FooterTemplate="{StaticResource ListViewFooterTemplate}"
				  ItemTemplate="{StaticResource ListViewItemTemplate}"
				  HorizontalContentAlignment="Stretch"
				  Background="Pink"
				  BorderBrush="LightGray"
				  BorderThickness="2,0"
				  ScrollViewer.HorizontalScrollBarVisibility="Auto"
				  ScrollViewer.HorizontalScrollMode="Auto"
				  Grid.Row="2">

			<ListView.ItemsPanel>
				<ItemsPanelTemplate>
					<ItemsStackPanel Orientation="Horizontal"
									 GroupHeaderPlacement="Top" />
				</ItemsPanelTemplate>
			</ListView.ItemsPanel>

			<ListView.GroupStyle>
				<GroupStyle>
					<GroupStyle.HeaderTemplate>
						<DataTemplate>
							<Border Background="White"
									BorderThickness="0,0,0,1"
									BorderBrush="White">

								<!-- GroupStyle Header Label -->
								<TextBlock Text="{Binding Key}"
										   FontSize="20"
										   FontWeight="Bold"
										   Foreground="DodgerBlue"
										   Margin="16,0" />
							</Border>
						</DataTemplate>
					</GroupStyle.HeaderTemplate>
				</GroupStyle>
			</ListView.GroupStyle>
		</ListView>
	</Grid>
</UserControl>
