<Page x:Class="UITests.Shared.Windows_UI_Xaml_Controls.Frame.Page3"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.Frame"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="">

	<StackPanel>

		<Grid Height="200">
			
			<Image Source="http://i.imgur.com/tpFJ94J.jpg"
				   HorizontalAlignment="Stretch"
				   VerticalAlignment="Stretch"
				   Stretch="UniformToFill" />

			<Border Opacity="0.7"
					Background="Black" />

			<CommandBar x:Name="MyAppBar">

				<AppBarButton Content="Button" />

				<AppBarButton>
					<AppBarButton.Icon>
						<BitmapIcon UriSource="ms-appx:///Assets/search.png" />
					</AppBarButton.Icon>
				</AppBarButton>
			</CommandBar>
		</Grid>

		<!-- Prevent navigation bar from overlapping-->
		<Border Height="44" />

		<ComboBox x:Name="Theme"
				  Header="Theme"
				  HorizontalAlignment="Center"
				  VerticalAlignment="Center" />
	</StackPanel>
</Page>
