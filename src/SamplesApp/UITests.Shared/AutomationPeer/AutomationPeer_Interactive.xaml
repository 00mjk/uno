<UserControl x:Class="UITests.Shared.AutomationPeer.AutomationPeer_Interactive"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.AutomationPeer"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">
	
	<StackPanel>

		<HyperlinkButton Content="Go to Google"
						 NavigateUri="http://www.google.com" />

		<Button Content="Activate me"
				Click="OnClick" />
		<ToggleButton Content="Toggle me" />

		<CheckBox Content="Check me" />

		<RadioButton Content="Select A" />

		<RadioButton Content="Select B" />

		<ToggleSwitch AutomationProperties.Name="ToggleSwitch"
					  OnContent="On"
					  OffContent="Off" />

		<TextBox PlaceholderText="Enter some text" />

		<PasswordBox PlaceholderText="Enter a password" />

		<PasswordBox Password="ERROR! This password that should never be read" />

		<ListView>
			<ListViewItem Content="Select item 1" />
			<ListViewItem Content="Select item 2" />
			<ListViewItem Content="Select item 3" />
		</ListView>
	</StackPanel>
</UserControl>
